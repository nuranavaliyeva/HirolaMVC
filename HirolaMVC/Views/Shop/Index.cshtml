@using HirolaMVC.ViewModels
@model ShopVM

<!-- Begin Hiraola's Breadcrumb Area -->
<div class="breadcrumb-area breadcrumb-height">

    <img src="~/assets/images/i.webp" height="230" width="1920" />
</div>
<!-- Hiraola's Breadcrumb Area End Here -->
<!-- Begin Hiraola's Content Wrapper Area -->
<div class="hiraola-content_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <div class="hiraola-sidebar-catagories_area">
                 
                    <div class="hiraola-sidebar_categories">
                        <div class="hiraola-categories_title">
                            <h5>Category</h5>
                        </div>
                        <ul class="sidebar-checkbox_list">
                          @foreach (GetCategoryVM categoryVM in Model.Categories)
                            {
                                <li>
                                    <a asp-action="index" asp-route-categoryId="@categoryVM.Id" asp-route-search="@Model.Search" asp-route-key="@Model.Key"> @categoryVM.Name <span>(@categoryVM.ProductCount)</span></a>
                                </li>

                            }
                        </ul>
                    </div>
                  
                </div>
            
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div class="shop-toolbar">
                    <div class="product-view-mode">
                        <a class="active grid-3" data-target="gridview-3" data-toggle="tooltip" data-placement="top" title="Grid View"><i class="fa fa-th"></i></a>
                        <a class="list" data-target="listview" data-toggle="tooltip" data-placement="top" title="List View"><i class="fa fa-th-list"></i></a>
                    </div>
                   
                </div>
                <div class="shop-product-wrap grid gridview-3 row">
                   @foreach (GetProductVM product in Model.Products)
                    {
                        <div class="col-lg-4">
                            <div class="slide-item">
                                <div class="single_product">
                                    <div class="product-img">
                                        <a href="single-product.html">
                                            <img class="primary-img" src="~/assets/images/@product.Image" alt="Hiraola's Product Image">
                                            <img class="secondary-img" src="~/assets/images/@product.SecondaryImg" alt="Hiraola's Product Image">
                                        </a>
                                        <div class="add-actions">
                                            <ul>
                                                <li>
                                                    <a asp-action="addbasket" asp-controller="basket" asp-route-id="@product.Id" class="hiraola-add_cart" data-toggle="tooltip" data-placement="top" title="Add To Cart"><i class="ion-bag"></i></a>
                                                </li>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="hiraola-product_content">
                                        <div class="product-desc_info">
                                            <h6>
                                                <a class="product-name" href="single-product.html">
                                                  @product.Name
                                                </a>
                                            </h6>
                                            <div class="price-box">
                                                <span class="new-price">$@product.Price</span>
                                            </div>
                                            
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="list-slide_item">
                                <div class="single_product">
                                    <div class="product-img">
                                        <a href="single-product.html">
                                            <img class="primary-img" src="~/assets/images/@product.Image" alt="Hiraola's Product Image">
                                            <img class="secondary-img" src="~/assets/images/@product.Image" alt="Hiraola's Product Image">
                                        </a>
                                    </div>
                                    <div class="hiraola-product_content">
                                        <div class="product-desc_info">
                                            <h6>
                                                <a class="product-name" href="single-product.html">
                                                   @product.Name
                                                </a>
                                            </h6>
                                         
                                            <div class="price-box">
                                                <span class="new-price">$@product.Price</span>
                                            </div>
                                           
                                        </div>
                                        <div class="add-actions">
                                            <ul>
                                                <li><a asp-action="addbasket" asp-controller="basket" asp-route-id="@product.Id" class="hiraola-add_cart"  data-toggle="tooltip" data-placement="top" title="Add To Cart">Add To Cart</a></li>
                                               
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pagination-area">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= Model.TotalPage; i++)
                                    {
                                        if (i == Model.CurrentPage)
                                        {

                                            <li class="page-item active disabled">
                                                <a class="page-link">@i</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item ">
                                                <a class="page-link" asp-action="index" asp-route-page="@i" asp-route-key="@Model.Key">@i</a>
                                            </li>
                                        }
                                    }
                                    @if (@Model.CurrentPage == @Model.TotalPage)
                                    {

                                        <li class="page-item disabled">
                                            <a class="page-link" aria-label="Next">&raquo;</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item ">
                                            <a class="page-link" asp-action="index" asp-route-page="@(@Model.CurrentPage+1)" asp-route-key="@Model.Key" aria-label="Next">&raquo;</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hiraola's Content Wrapper Area End Here -->

