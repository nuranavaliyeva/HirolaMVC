@using HirolaMVC.Models
@using HirolaMVC.ViewModels
@model DetailVM

@{
    Product product = Model.Product;
}

<!-- Begin Hiraola's Breadcrumb Area -->
<div class="breadcrumb-area breadcrumb-height">

    <img src="~/assets/images/i.webp" height="230" width="1920" />
</div>
<!-- Hiraola's Breadcrumb Area End Here -->
<!-- Begin Hiraola's Single Product Area -->
<div class="sp-area">
    <div class="container">
        <div class="sp-nav">
            <div class="row">
                <div class="col-lg-5 col-md-5">
                    <div class="sp-img_area">
                        <div class="zoompro-border">
                           
                                <div class="zoompro-border">
                                    <img class="zoompro" src="~/assets/images/@product.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true).Image" data-zoom-image="~/assets/images/single-product/large-size/1.jpg" alt="Hiraola's Product Image" />
                                </div>
                           
                        </div>
                        <div id="gallery" class="sp-img_slider">
                            @foreach (ProductImage img in product.ProductImages)
                            {
                            <a data-image="~/assets/images/single-product/large-size/2.jpg" data-zoom-image="~/assets/images/single-product/large-size/2.jpg">
                                    <img src="~/assets/images/@img?.Image" alt="Hiraola's Product Image">
                            </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7">
                    <div class="sp-content">
                        <div class="sp-heading">
                            <h5><a href="#">@product.Name</a></h5>
                        </div>
                        
                      
                        <div class="sp-essential_stuff">
                            <ul>
                                <li>Price <a href="javascript:void(0)"><span>$@product.Price</span></a></li>
                                <li>Brands <a href="javascript:void(0)">@product.Brand.Name</a></li>
                                <li>Product Code: <a href="javascript:void(0)">@product.ProductCode</a></li>
                                
                                <li>Availability: <a href="javascript:void(0)">@product.ISAvailable</a></li>
                            </ul>
                        </div>
                        
                      
                        <div class="qty-btn_area">
                            <ul>
                                <li class="add-to-cart">
                                    <a class="btn btn-custom-size lg-size btn-pronia-primary"
                                       asp-action="addbasket" asp-controller="basket" asp-route-id="@product.Id">Add to cart</a>
                                </li>
                              
                               
                            </ul>
                        </div>
                        <div class="hiraola-tag-line">
                            <h6>Tags:</h6>

                           @foreach (ProductTag productTag in product.ProductTags)
                            {
                                @productTag.Tag.Name
                            }
                        </div>
                        <div class="hiraola-social_link">
                            <ul>
                                <li class="facebook">
                                    <a href="https://www.facebook.com" data-toggle="tooltip" target="_blank" title="Facebook">
                                        <i class="fab fa-facebook"></i>
                                    </a>
                                </li>
                                <li class="twitter">
                                    <a href="https://twitter.com" data-toggle="tooltip" target="_blank" title="Twitter">
                                        <i class="fab fa-twitter-square"></i>
                                    </a>
                                </li>
                                <li class="youtube">
                                    <a href="https://www.youtube.com" data-toggle="tooltip" target="_blank" title="Youtube">
                                        <i class="fab fa-youtube"></i>
                                    </a>
                                </li>
                                
                                <li class="instagram">
                                    <a href="https://instagram.com" data-toggle="tooltip" target="_blank" title="Instagram">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hiraola's Single Product Area End Here -->
<!-- Begin Hiraola's Single Product Tab Area -->
<div class="hiraola-product-tab_area-2 sp-product-tab_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="sp-product-tab_nav ">
                    <div class="product-tab">
                        <ul class="nav product-menu">
                            <li>
                                <a class="active" data-toggle="tab" href="#description"><span>Description</span></a>
                            </li>
                           
                        </ul>
                    </div>
                    <div class="tab-content hiraola-tab_content">
                        <div id="description" class="tab-pane active show" role="tabpanel">
                            <div class="product-description">
                                <ul>
                                  @product.Description
                                </ul>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hiraola's Single Product Tab Area End Here -->

<!-- Begin Hiraola's Product Area Two -->
<div class="hiraola-product_area hiraola-product_area-2 section-space_add">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">


                <div class="hiraola-section_title">
                    <h4>Related Products</h4>
                </div>

            </div>
            <div class="col-lg-12">
                <div class="hiraola-product_slider-3">


                    <!-- Begin Hiraola's Slide Item Area -->
                    @foreach (Product product1 in Model.RelatedProducts)
                    {
                        <div class="slide-item">
                            <div class="single_product">
                                <div class="product-img">
                                    <a href="single-product.html">
                                        <img class="primary-img" src="~/assets/images/@product1.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true).Image" alt="Hiraola's Product Image">
                                        <img class="secondary-img" src="~/assets/images/@product1.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==false).Image">
                                    </a>
                                  
                                    <div class="add-actions">
                                        <ul>
                                            <li><a class="hiraola-add_cart" asp-action="addbasket" asp-controller="basket" asp-route-id="@product1.Id" data-toggle="tooltip" data-placement="top" title="Add To Cart"><i class="ion-bag"></i></a></li>
                                          
                                            <li data-toggle="modal" data-target="#exampleModalCenter"><a asp-action="detail" asp-controller="shop" asp-route-id="@product1.Id" data-toggle="tooltip" data-placement="top" title="Quick View"><i class="ion-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="hiraola-product_content">
                                    <div class="product-desc_info">
                                        <h6><a class="product-name" href="single-product.html">Vitra Sunburst Clock pret...</a></h6>
                                        <div class="price-box">
                                            <span class="new-price">@product1.Price</span>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Hiraola's Slide Item Area End Here -->
                
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hiraola's Product Area Two End Here -->
