@using HirolaMVC.ViewModels
@model ResetPasswordVM
<div class="breadcrumb-area">
    <img height="230" width="1920" src="~/assets/images/i.webp" />
</div>
<div class="col-sm-12 col-md-24 col-xs-12 col-lg-12" style="margin:auto">
    <!-- Login Fors-->
    <form method="post">
        <div class="login-form">
            <h4 class="login-title">Reset Password</h4>
            <div class="row">
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>

                <div class="col-md-12">
                    <label asp-for="NewPassword">NewPassword</label>
                    <input asp-for="NewPassword" placeholder="NewPassword" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
             
               
                <div class="col-md-12">
                    <button type="submit" class="hiraola-login_btn">Reset Password</button>
                </div>
            </div>
        </div>
    </form>
</div>