@using HirolaMVC.Areas.ViewModels.Brands

@model List<GetBrandAdminVM>
@{
    int count = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Brand Table</h4>

                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success ">Create Brand</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetBrandAdminVM brandVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <p>@brandVM.Name</p>
                                    </td>
                                    <td>
                                        <p>@brandVM.ProductCount</p>
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@brandVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@brandVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                      
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
